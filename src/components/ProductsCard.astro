---
// Nhận các tham số từ props
const {
  productID,
  productName,
  productPrice,
  productDescription,
  productCategory,
  productLink,
  productImageSource,
} = Astro.props;
---

<div
  class="mb-10 max-w-sm bg-white border border-gray-200 rounded-lg shadow-md"
>
  <a href={productLink}>
    <img
      class="rounded-t-lg object-cover w-full h-36"
      src={productImageSource}
      alt=""
    />
  </a>

  <div class="p-5">
    <div class="mb-3">
      <a href={productLink}>
        <h5 class="font-be-vn text-2xl font-bold tracking-tight text-gray-900">
          {productName}
        </h5>
      </a>
      <a class="" href=`/shop/category/${productCategory}/`
        ><span class="text-orange-600 hover:underline font-be-vn text-sm"
          >#{productCategory}</span
        ></a
      >
    </div>

    <p
      class="font-be-vn mb-4 font-normal text-gray-700 leading-normal line-clamp-3"
    >
      {productDescription}
    </p>
    <div class="justify-between flex">
      <h5
        class="font-be-vn mb-3 text-2xl font-semibold tracking-tight text-gray-900"
      >
        ₫ {productPrice}
      </h5>
    </div>
    <div class="justify-between gap-3 flex">
      <a
        href={productLink}
        class="inline-flex items-center px-3 py-2 h-12 text-sm whitespace-nowrap rvsbtn"
      >
        Thông tin
      </a>
      <a
        id="addToCartButton"
        class="inline-flex items-center px-3 py-2 text-sm h-12 btn whitespace-nowrap"
        data-pid={productID}
        href=""
      >
        Thêm vào giỏ
        <svg
          class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
<script src="../scripts/cart-add"></script>
